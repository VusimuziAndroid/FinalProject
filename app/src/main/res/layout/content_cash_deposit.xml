<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_cash_deposit"
    tools:context="com.example.abvn237.myapplication.CashDeposit">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose the amount to deposit"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"


        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R100"
        android:id="@+id/bOneHundred"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:background="#C04000"
        android:onClick="OnClickCashDeposit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R200"
        android:id="@+id/bTwoHundred"
        android:layout_below="@+id/bOneHundred"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_alignEnd="@+id/bOneHundred"
        android:background="#C04000"
        android:onClick="OnClickCashDeposit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R500"
        android:id="@+id/bFiveHundred"
        android:layout_below="@+id/bTwoHundred"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_alignEnd="@+id/bOneHundred"
        android:background="#C04000"
        android:onClick="OnClickCashDeposit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R1000"
        android:id="@+id/bOneThousand"
        android:layout_below="@+id/bFiveHundred"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_alignEnd="@+id/bFiveHundred"
        android:background="#C04000"
        android:onClick="OnClickCashDeposit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R2000"
        android:id="@+id/bTwoThousand"
        android:layout_below="@+id/bOneThousand"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_alignEnd="@+id/bOneThousand"
        android:background="#C04000"
        android:onClick="OnClickCashDeposit" />

</RelativeLayout>
