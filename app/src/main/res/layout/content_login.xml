<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_login" tools:context="com.example.abvn237.myapplication.Login"
    android:onClick="onClickLogin">

    <!-- The form for the login screen -->

    <EditText
        android:id="@+id/etAccountNr"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:hint="Account Number"
        android:layout_alignBaseline="@+id/bLogin"
        android:layout_alignBottom="@+id/bLogin"
        android:layout_alignParentEnd="true" />



    <EditText
        android:id="@+id/etATMPin"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etAccountNr"
        android:layout_alignParentEnd="true"
        android:hint="ATM Pin"/>



    <Button
        android:id="@+id/bLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C04000"
        android:textColor="#fc05284a"
        android:layout_marginTop="40dp"
        android:onClick="onClickLogin"
        android:text="Login"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/tvRegisterLink"
        android:layout_width="wrap_content"
        android:text="Register Here"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:visibility="visible"
        android:textColor="#fc05284a"
        android:layout_below="@+id/bLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="onClickLogin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome to the Business Mobile Banking App"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ea5e5555" />

</RelativeLayout>
