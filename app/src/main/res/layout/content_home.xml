<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_home" tools:context="com.example.abvn237.myapplication.Home">


    <Button
        android:id="@+id/bProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C04000"
        android:textColor="#fc05284a"
        android:layout_marginTop="0dp"

        android:layout_alignParentStart="true"
        android:onClick="onClickHome"
        android:text="Profile" />

    <Button
        android:id="@+id/bSocialMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C04000"
        android:textColor="#fc05284a"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/bProfile"
        android:layout_alignParentStart="true"
        android:onClick="onClickHome"
        android:text="Social Media" />


    <Button
        android:id="@+id/bBankingStatement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C04000"
        android:textColor="#fc05284a"
        android:layout_marginTop="30dp"
        android:onClick="onClickHome"
        android:text="Bank Statement"
        android:layout_below="@+id/bSocialMedia"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/bCashTransfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C04000"
        android:textColor="#fc05284a"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/bBankingStatement"
        android:layout_alignParentStart="true"
        android:onClick="onClickHome"
        android:text="Cash Transfer" />

    <Button
        android:id="@+id/bExpenditures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C04000"
        android:textColor="#fc05284a"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/bCashTransfer"
        android:layout_alignParentStart="true"
        android:onClick="onClickHome"
        android:text="Expenditures" />

    <Button
        android:id="@+id/bCashDeposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C04000"
        android:textColor="#fc05284a"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/bExpenditures"
        android:layout_alignParentStart="true"
        android:onClick="onClickHome"
        android:text="Cash Deposit" />

</RelativeLayout>
